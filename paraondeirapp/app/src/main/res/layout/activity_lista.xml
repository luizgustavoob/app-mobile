<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_lista"
        android:title="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_alignParentLeft="true"
        app:theme="@style/ToolbarPrincipal"/>

    <ListView
        android:id="@+id/lv_estabelecimentos"
        android:layout_below="@+id/tb_lista"
        android:layout_above="@+id/tb_pesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_pesquisa"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/branco"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/et_pesquisa"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
